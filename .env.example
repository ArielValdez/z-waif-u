# =============================================================================
# Z-WAIF CONFIGURATION FILE
# =============================================================================
# All settings marked as REQUIRED must be configured for proper operation

# =============================================================================
# API SETTINGS (REQUIRED)
# =============================================================================
HOST_PORT=127.0.0.1:5000
API_TYPE=Oobabooga
MODEL_TYPE=chatml
OOGABOOGA_SUPPORT_HOST=127.0.0.1:5000

# =============================================================================
# CHARACTER SETTINGS (REQUIRED)
# =============================================================================
CHAR_NAME=NAME OF AI
CHARACTER_CARD= CARD NAME 
YOUR_NAME= YOUR NAME 
PARTNER_NAME= NAME HERE IF THEY ARE PARTNER 
CHARACTER_CONTEXT= WHAT YOU WANT THE CHARACTER TO DO 

# Optional: Override character context specifically for API calls
# API_CHARACTER_CONTEXT=

# =============================================================================
# MODEL CONTEXT SETTINGS
# =============================================================================
TOKEN_LIMIT=4096
MESSAGE_PAIR_LIMIT=40
TIME_IN_ENCODING=OFF

# =============================================================================
# ANTI-STREAMING SETTINGS (REQUIRED - prevents streaming personality!)
# =============================================================================
NEWLINE_CUT_BOOT=ON
RP_SUP_BOOT=ON
API_STREAM_CHATS=OFF
SILERO_VAD=ON

# =============================================================================
# WHISPER SETTINGS
# =============================================================================
WHISPER_MODEL=base.en
WHISPER_CHOICE=faster-whisper
WHISPER_CHUNKS_MAX=14
AUTOCHAT_MIN_LENGTH=10

# =============================================================================
# VOICE SETTINGS (RVC)
# =============================================================================
USE_RVC=true
RVC_HOST=127.0.0.1
RVC_PORT=7897
RVC_MODEL=your_model_name
RVC_SPEAKER=0
RVC_PITCH=0.0
RVC_SPEED=1.0

# =============================================================================
# IMAGE/VISION SETTINGS
# =============================================================================
IMG_PORT=127.0.0.1:5007
VISUAL_CHARACTER_NAME=Z-WAIF-VisualAssist
VISUAL_PRESET_NAME=Z-WAIF-VisualPreset

# Ollama Visual Settings (if using Ollama)
# ZW_OLLAMA_MODEL=
# ZW_OLLAMA_MODEL_VISUAL=
# OLLAMA_VISUAL_ENCODE_GUIDANCE=
# OLLAMA_VISUAL_CARD=

# =============================================================================
# VTUBE STUDIO SETTINGS
# =============================================================================
EYES_FOLLOW=None
EYES_START_ID=14
VTUBE_STUDIO_API_HOST=127.0.0.1
VTUBE_STUDIO_API_PORT=8001
VTUBE_MODEL_NAME= MODEL NAME HERE
VTUBE_FACE_TRACKING=ON
VTUBE_VIRTUAL_CAMERA= CAMERA HERE 
VTUBE_AVATAR_MODE=UNITY

# =============================================================================
# UNITY AVATAR SETTINGS
# =============================================================================
MODULE_UNITY_AVATAR=ON
MODULE_REALTIME_AVATAR=ON
UNITY_AVATAR_QUALITY=HIGH
UNITY_AVATAR_FPS=30
UNITY_AVATAR_FALLBACK=AUTO

# =============================================================================
# EMOTION PROCESSING
# =============================================================================
EMOTION_ANALYSIS_ENABLED=ON
EMOTION_INTENSITY_SCALING=1.0
REALTIME_EMOTION_SYNC=ON
AVATAR_EMOTION_MAPPING=ADVANCED

# =============================================================================
# AVATAR PERFORMANCE
# =============================================================================
AVATAR_RENDER_QUALITY=HIGH
AVATAR_CONTINUOUS_MODE=ON
VIRTUAL_CAMERA_BACKEND=unitycapture
AVATAR_AUTO_RESTART=ON

# =============================================================================
# MODULE TOGGLES
# =============================================================================
MODULE_MINECRAFT=OFF
MODULE_ALARM=ON
MODULE_VTUBE=OFF
MODULE_DISCORD=OFF
MODULE_RAG=ON
MODULE_VISUAL=OFF
MODULE_TWITCH=OFF
HOTKEYS_BOOT=OFF

# =============================================================================
# MEMORY SETTINGS
# =============================================================================
MEMORY_CLEANUP_FREQUENCY=60
MEMORY_PERSISTENCE=ON

# =============================================================================
# DISCORD SETTINGS
# =============================================================================
DISCORD_TOKEN= TOKEN HERE
# Optional: specific channel (uncomment and set if you want to limit to one channel)
# DISCORD_CHANNEL=general
# =============================================================================
# TWITCH SETTINGS
# =============================================================================
TWITCH_TOKEN=TOKEN HERE
TWITCH_CLIENT_ID=TOKEN HERE
TWITCH_CHANNEL= NAME OF CHANNEL HERE 
TWITCH_BOT_NAME=z_waif_bot
# =============================================================================
# TWITCH BOT BEHAVIOR
# =============================================================================
TWITCH_PERSONALITY=friendly
TWITCH_AUTO_RESPOND=ON
TWITCH_RESPONSE_CHANCE=0.8
TWITCH_COOLDOWN_SECONDS=3
TWITCH_MAX_MESSAGE_LENGTH=450


# Instructions for getting Twitch credentials:
# 1. Go to https://dev.twitch.tv/console/apps
# 2. Click "Create App" 
# 3. Give it a name like "Z-WAIF Bot"
# 4. Set OAuth Redirect URL to: http://localhost:17563
# 5. Set Category to "Chat Bot"
# 6. Copy the Client ID
# 7. Generate a new Client Secret (this becomes your TWITCH_TOKEN)
# 8. Set TWITCH_CHANNEL to your Twitch username (lowercase)

# Settings explanation:
# MODULE_TWITCH = ON/OFF - Enable/disable the entire Twitch module
# TWITCH_PERSONALITY = friendly/enthusiastic/sarcastic/supportive/casual/playful - AI personality
# TWITCH_AUTO_RESPOND = ON/OFF - Whether to automatically respond to chat messages
# TWITCH_RESPONSE_CHANCE = 0.0-1.0 - Probability of responding to each message (0.8 = 80%)
# TWITCH_COOLDOWN_SECONDS = Number of seconds between AI responses
# TWITCH_MAX_MESSAGE_LENGTH = Maximum length for AI responses 
